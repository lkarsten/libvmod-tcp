#!/bin/bash
#
# Script to rename libvmod-tcp into libvmod-foo.
# (where "foo" is your new vmod name, of course.)
#
# Leaves the changes uncommitted in the working tree, so you get to fix any
# unintended changes.
#
# Author: Lasse Karstensen <lkarsten@varnish-software.com>, September 2014.
#
set -o errexit

NAME=$1
if [ -z "$NAME" ]; then
	echo "Usage: $0 <new-vmod-name-without-libvmod-prefix>"
	echo "Rename libvmod-tcp source tree."
	echo
	exit -1
fi

if ! git diff-index --quiet HEAD --; then
	echo "ERROR: Need a clean working tree. Run \"git stash\" first."
	exit -2
fi

git mv src/vmod_tcp.c src/vmod_${NAME}.c
git mv src/vmod_tcp.vcc src/vmod_${NAME}.vcc
git mv vmod-tcp.spec vmod-${NAME}.spec

git grep -z -l tcp | xargs -0 sed -i -s -e "s/tcp/${NAME}/g"

echo "All done."
echo -e "For your cut&paste needs:\n  git commit -a -m 'Automatic rename of libvmod-tcp to libvmod-tcp.'"



